<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-black navbar-dark">
        <div class="col-9 text-white">
            @ViewBag.Message
        </div>

        <a class="navbar-brand" href="#">Company</a>
        <div class="col-3">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/contact">Contact</a>
                </li>
            </ul>
        </div>
        
    </nav>
    <div class="container-fluid">
        <div class="row">

            <div class="col-10" style="min-height:610px">
                @RenderBody()
            </div>
            <div class="col-2 text-white" style="background-color:indianred; min-height:1050px;padding:0px">
                <div class="list-group">
                    <a href="#" class="list-group-item text-white" style="background-color:transparent">Account</a>
                    <a href="#" class="list-group-item text-white" style="background-color:transparent">Your Order</a>
                    <a href="#" class="list-group-item text-white" style="background-color:transparent">Offers</a>
                    @RenderSection("sidebaroptions", required: false)
                </div>
            </div>
        </div>
    </div>
</body>
</html>
