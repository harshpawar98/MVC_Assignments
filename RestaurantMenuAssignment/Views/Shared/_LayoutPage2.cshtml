<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-black navbar-dark">
        <a class="navbar-brand"><i class="fas fa-utensils" style="color:white;width:5px;margin-left:10px"></i></a>

        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/menu/getMenuData">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/restaurant/getRestaurantData">Restaurant</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 text-white" style="background-color: ButtonShadow; min-height: 665px; padding: 0px;">
                <form action="/Restaurant/getRestaurantData">
                    <div class="form-group">
                        <a href="#" class="list-group-item text-white" style="background-color:transparent">Search Using...</a>
                        <ul class="list-group" style="background-color:transparent">
                            <li class="list-group-item" style="background-color:transparent"><input type="text" name="rname" placeholder="Restaurant Name" class="form-control" value="@ViewBag.rname"/></li>
                            <li class="list-group-item" style="background-color:transparent"><input type="text" name="city" placeholder="City" class="form-control" value="@ViewBag.city" /></li>
                            <li class="list-group-item" style="background-color:transparent"><input type="text" name="mname" placeholder="Famous Menu" class="form-control" value="@ViewBag.mname"/></li>
                            <li class="list-group-item" style="background-color:transparent"><button type="submit" class="btn btn-dark" style="margin-left:60px">Search</button></li>
                        </ul>
                    </div>
                </form>
                @RenderSection("sidebaroptions", required: false)
            </div>
            <div class="col-10" style="min-height:610px; background-image:url(/Images/restaurant9.jpg);background-repeat:no-repeat;background-size:cover">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
