@model RestaurantMenuAssignment.Models.Restaurant
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<head>
    <style>
        .form-label {
            font-weight: bold;
            color:white
        }
        .field-validation-error {
            color: red;
        }
    </style>
</head>


<div class="card" style="width: 500px; height: auto; margin-left: 530px; margin-top: 40px; background: linear-gradient(to top,rgba(0,0,0,0.5)50%,rgba(0,0,0,0.5)50%">
    <div class="card-body">
        <h3 style="text-align: center; margin-top: 5px;color:white">Create Restaurant</h3>
        <form action="/Restaurant/CreateRestaurant" method="post">
            <div class="form-group">
                <label class="form-label">Restaurant Name</label>
                <input type="text" class="form-control" name="Restaurant_Name" placeholder="Enter Restaurant Name" />
                @Html.ValidationMessageFor(temp => temp.Restaurant_Name)
            </div>
            <div class="form-group">
                <label class="form-label">Address</label>
                <textarea class="form-control" rows="3" name="Address" placeholder="Enter Address"></textarea>
                @Html.ValidationMessageFor(temp => temp.Address)
            </div>
            <div class="form-group">
                <label class="form-label">City</label>
                <input type="text" class="form-control" name="City" placeholder="Enter City"/>
                @Html.ValidationMessageFor(temp => temp.City)
            </div>
            <div class="form-group">
                <label class="form-label">Mobile</label>
                <input type="text" class="form-control" name="Mobile" placeholder="Enter Mobile Number" />
                @Html.ValidationMessageFor(temp => temp.Mobile)
            </div>
            <div class="form-group">
                <label class="form-label">Famous Menu</label>
                <select class="form-control" name="Menu_Id">

                    <option value="">Please select</option>
                    @foreach (var menu in ViewBag.menu)
                    {
                        <option value="@menu.Menu_Id">@menu.Menu_Name</option>
                    }

                </select>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Create</button>
                <a class="btn btn-danger" href="/Restaurant/getRestaurantData">Cancel</a>
            </div>
        </form>
    </div>
</div>