@model RestaurantMenuAssignment.Models.Restaurant

@{
    
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<head>
    <style>
        .form-label {
            font-weight:bold;
            color:white
        }
        .field-validation-error {
            color: red;
        }
    </style>
</head>

<div class="card" style="width: 500px; height: auto; margin-left: 530px; margin-top: 40px; background: linear-gradient(to top,rgba(0,0,0,0.5)50%,rgba(0,0,0,0.5)50%">
    <div class="card-body">
        <h3 style="text-align: center; margin-top: 5px;color:white">Update Restaurant</h3>
        <form action="/Restaurant/UpdateRestaurant" method="post">
            <div class="form-group">
                <label class="form-label">Restaurant Name</label>
                <input type="hidden" name="Restaurant_Id" value="@Model.Restaurant_Id" />
                <input type="text" class="form-control" name="Restaurant_Name" value="@Model.Restaurant_Name" />
                @Html.ValidationMessageFor(temp=>temp.Restaurant_Name)
            </div>
            <div class="form-group">
                <label class="form-label">Address</label>
                <textarea class="form-control" name="Address">@Model.Address</textarea>
            </div>
            <div class="form-group">
                <label class="form-label">City</label>
                <input type="text" class="form-control" name="City" value="@Model.City" />
            </div>
            <div class="form-group">
                <label class="form-label">Mobile</label>
                <input type="text" class="form-control" name="Mobile" value="@Model.Mobile" />
            </div>
            <div class="form-group">
                <label class="form-label">Famous Menu</label>
                <select class="form-control" name="Menu_Id">
                    <option value="@Model.Menu_Id">@Model.Menu.Menu_Name</option>
                    @foreach (var menu in ViewBag.menu)
                    {
                        <option value="@menu.Menu_Id">@menu.Menu_Name</option>
                    }
                </select>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Update</button>
                <a class="btn btn-danger" href="/Restaurant/getRestaurantData">Cancel</a>
            </div>
        </form>
    </div>
 </div>