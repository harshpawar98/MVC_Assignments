@model RestaurantMenuAssignment.Models.Menu
@{
    Layout = "~/Views/Shared/_LayoutPage4.cshtml";
}

<head>
    <style>
        .form-label {
            font-weight: bold;
            color:white
        }
    </style>
</head>


<div class="card" style="width: 500px; height: auto; margin-left: 530px; margin-top: 100px; background: linear-gradient(to top,rgba(0,0,0,0.5)50%,rgba(0,0,0,0.5)50%">
    <div class="card-body">
        <h3 style="text-align:center;color:white" class="card-title">Update Menu</h3>
        <form action="/Menu/UpdateMenu" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label">Menu Name</label>
                <input type="hidden" name="Menu_Id" value="@Model.Menu_Id" />
                <input type="text" class="form-control" name="Menu_Name" value="@Model.Menu_Name" />
            </div>
            <div class="form-group">
                <label class="form-label">Photo</label> <br />
                <input type="file" class="form-control-file" name="Photo" value=" @Model.Photo" style="color:white" />
                <img src="data:image;base64,@Model.Photo" width="80px"/>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Update</button>
                <a class="btn btn-danger" href="/Menu/getMenuData">Cancel</a>
            </div>
        </form>
    </div>
</div>